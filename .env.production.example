# ============================================================================
# P2E Gaming Platform - Production Environment Template
# ============================================================================

# Network Configuration
NEXT_PUBLIC_NETWORK=mainnet
NEXT_PUBLIC_STACKS_API_URL=https://api.hiro.so
NEXT_PUBLIC_BITCOIN_API_URL=https://blockstream.info/api

# Contract Addresses (Update after mainnet deployment)
NEXT_PUBLIC_PLATFORM_TOKEN_CONTRACT=SP_YOUR_MAINNET_ADDRESS.platform-token
NEXT_PUBLIC_LAND_NFT_CONTRACT=SP_YOUR_MAINNET_ADDRESS.land-nft
NEXT_PUBLIC_BLUEPRINT_NFT_CONTRACT=SP_YOUR_MAINNET_ADDRESS.blueprint-nft
NEXT_PUBLIC_MARKETPLACE_CONTRACT=SP_YOUR_MAINNET_ADDRESS.marketplace
NEXT_PUBLIC_GAME_REWARDS_CONTRACT=SP_YOUR_MAINNET_ADDRESS.game-rewards

# Feature Flags
NEXT_PUBLIC_USE_REAL_BLOCKCHAIN=true
NEXT_PUBLIC_ENABLE_WEBSOCKET=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_DEBUG_MODE=false

# App Configuration
NEXT_PUBLIC_APP_NAME="P2E Gaming Platform"
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_APP_VERSION=1.0.0

# Deployment Configuration (PRIVATE - Use secure key management)
# WARNING: Never store mainnet keys in plain text
# Use hardware wallets or secure key management services
DEPLOYMENT_ADDRESS=SP_YOUR_MAINNET_ADDRESS

# Security Configuration (PRIVATE)
ENCRYPTION_KEY=your-production-encryption-key
JWT_SECRET=your-production-jwt-secret

# API Keys (PRIVATE)
HIRO_API_KEY=your-production-hiro-api-key
ANALYTICS_API_KEY=your-production-analytics-key

# Environment
NODE_ENV=production
